<PageTitle>Moogle!</PageTitle>

<h1>🔍 Moogle!</h1>

<input class="p-1 my-4" @bind="query"  @onkeyup="RunQuery" placeholder="Introduzca su búsqueda">

<button type="default" class="btn btn-primary" @onclick="RunQuery">🔍 Buscar</button>

@if (!string.IsNullOrEmpty(result.Suggestion)) {
    <div class="suggestion">
        <p>¿Quisite decir <strong><a href="/@result.Suggestion" >@result.Suggestion</a></strong>?</p>
    </div>
}


<ul class="results top-row">
@if(result.Items().Count()==0 && query!="")
{
    <li class="item" >
        <div >
            <p class="title">Lo Sentimos</p>
            <p>Al Parecer no hubo resultados para su busqueda</p>
        </div>
    </li>
}
@foreach (var item in result.Items()) {
    <li id="list">
        <div class="item">
    <a href="/opendoc/@item.Title">
            <p class="title">@item.Title</p>
    </a>
            <p class="snippet">... @item.Snippet ...</p>
        </div>
    </li>
}
</ul>

@code {
    private string query = "";
    private SearchResult result = new SearchResult();

    private void RunQuery() {
        result = Moogle.Query(query);
    }

    protected override void OnInitialized()
    {
	if(Query != null)
	{
		query=Query;
		RunQuery();	
	}
    }

[Parameter]
public string? Query{get;set;}
}
